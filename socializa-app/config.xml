<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wadobo.socializa" version="1.0.15" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Socializa</name>
    <description>
        A puzzle game that uses your geolocation to tell you a story
    </description>
    <author email="info@wadobo.com" href="http://wadobo.com">
        Wadobo Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="15" />
    <plugin name="cordova-plugin-battery-status" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.0" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="phonegap-plugin-barcodescanner" source="npm" spec="~6.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.3.0" />
    <plugin name="cordova-plugin-certificates" spec="~0.6.3" />
    <plugin name="cordova-plugin-facebook4" spec="~1.7.4">
        <variable name="APP_ID" value="535483196622224" />
        <variable name="APP_NAME" value="Socializa" />
        <param name="APP_ID" value="535483196622224" />
        <param name="APP_NAME" value="Socializa" />
    </plugin>
    <plugin name="cordova-plugin-googleplus" spec="~5.1.1">
        <param name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.180959654042-25rgejtel6r7m6dg93mnmhv39shfs93j" />
    </plugin>
    <icon src="icons/icon.png" />
    <splash src="icons/splash.png" />
    <platform name="android">
        <icon density="ldpi" src="icons/res/icons/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="icons/res/icons/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="icons/res/icons/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="icons/res/icons/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="icons/res/icons/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="icons/res/icons/android/icon-192-xxxhdpi.png" />
        <splash density="port-ldpi" src="icons/res/screens/android/screen-ldpi-portrait.png" />
        <splash density="port-mdpi" src="icons/res/screens/android/screen-mdpi-portrait.png" />
        <splash density="port-hdpi" src="icons/res/screens/android/screen-hdpi-portrait.png" />
        <splash density="port-xhdpi" src="icons/res/screens/android/screen-xhdpi-portrait.png" />
        <splash density="port-xxhdpi" src="icons/res/screens/android/screen-xxhdpi-portrait.png" />
        <splash density="port-xxxhdpi" src="icons/res/screens/android/screen-xxxhdpi-portrait.png" />
    </platform>
    <platform name="ios">
        <!-- ICONS -->
        <!-- Spotlight Icon -->
        <icon src="icons/res/icons/ios/icon-40.png" width="40" height="40" />
        <icon src="icons/res/icons/ios/icon-40@2x.png" width="80" height="80" />
        <icon src="icons/res/icons/ios/icon-40@3x.png" width="120" height="120" />
        
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="icons/res/icons/ios/icon-50.png" width="50" height="50" />
        <icon src="icons/res/icons/ios/icon-50@2x.png" width="100" height="100" />

	<!-- iPhone 6 / 6+ -->
        <icon src="icons/res/icons/ios/icon-60@3x.png" width="180" height="180" />
        
        <!-- iPhone / iPod Touch  -->
        <icon src="icons/res/icons/ios/icon-60.png" width="60" height="60" />
        <icon src="icons/res/icons/ios/icon-60@2x.png" width="120" height="120" />
        
        <!-- iPad -->
        <icon src="icons/res/icons/ios/icon-72.png" width="72" height="72" />
        <icon src="icons/res/icons/ios/icon-72@2x.png" width="144" height="144" />
        
        <!-- iPad -->
        <icon src="icons/res/icons/ios/icon-76.png" width="76" height="76" />
        <icon src="icons/res/icons/ios/icon-76@2x.png" width="152" height="152" />
        <icon src="icons/res/icons/ios/icon-83.5@2x.png" width="167" height="167" />
        
        <!-- Settings Icon -->
        <icon src="icons/res/icons/ios/icon-small.png" width="29" height="29" />
        <icon src="icons/res/icons/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="icons/res/icons/ios/icon-small@3x.png" width="87" height="87" />
        
        <!-- iPhone / iPod Touch -->
        <icon src="icon.png" width="57" height="57" />
        <icon src="icon@2x.png" width="114" height="114" />

        <!-- SPLASH -->
        <!-- iPhone and iPod touch -->
        <splash src="icons/res/screens/ios/Default.png" width="320" height="480" />
        <splash src="icons/res/screens/ios/Default@2x.png" width="640" height="960" />
        
        <!-- iPhone 5 / iPod Touch (5th Generation) -->
        <splash src="icons/res/screens/ios/Default-568h.png" width="320" height="568" />
        <splash src="icons/res/screens/ios/Default-568h@2x.png" width="640" height="1136" />
        
        <!-- iPhone 6 -->
        <splash src="icons/res/screens/ios/Default-667h@2x.png" width="750" height="1334" />
        <splash src="icons/res/screens/ios/Default-Portrait-736h@3x.png" width="1242" height="2208" />
        <splash src="icons/res/screens/ios/Default-Landscape-736h@3x.png" width="2208" height="1242" />
        
        <!-- iPad -->
        <splash src="icons/res/screens/ios/Default-Portrait.png" width="768" height="1024" />
        <splash src="icons/res/screens/ios/Default-Landscape.png" width="1024" height="768" />
        
        <!-- Retina iPad -->
        <splash src="icons/res/screens/ios/Default-Portrait@2x.png" width="1536" height="2048" />
        <splash src="icons/res/screens/ios/Default-Landscape@2x.png" width="2048" height="1536" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="*" />
    <engine name="android" spec="~6.0.0" />
    <plugin name="cordova-plugin-x-toast" spec="~2.6.0" />
    <plugin name="cc.fovea.cordova.purchase" spec="~6.1.2">
        <variable name="BILLING_KEY" value="" />
    </plugin>
    <plugin name="es6-promise-plugin" spec="~4.1.0" />
    <plugin name="cordova-plugin-device-orientation" spec="~1.0.6" />
</widget>
